{
  "name": "mcverify-bun",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "module": "index.ts",
  "scripts": {
    "lint:migrate": "bunx @oxlint/migrate ./eslint.config.ts",
    "lint": "bunx oxlint && bunx eslint",
    "lint:fix": "bunx oxlint --fix && bunx eslint --fix",
    "postinstall": "git-hooks",
    "dev": "bun run --define process.env.NODE_ENV=\"'development'\" --watch src/index.ts",
    "build": "bun build --define process.env.NODE_ENV=\"'production'\" --compile --minify --sourcemap --target=bun ./src/index.ts --outfile dist-binary/mcverify",
    "bundle": "bun build --define process.env.NODE_ENV=\"'production'\" --minify --sourcemap=inline --target=bun ./src/index.ts --outdir dist"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.6",
    "elysia": "^1.4.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/server-timing": "^1.4.0",
    "bun-git-hooks": "^0.3.1",
    "bun-types": "^1.3.0",
    "consola": "^3.4.2",
    "eslint": "^9.37.0",
    "eslint-plugin-oxlint": "^1.22.0",
    "lint-staged": "^16.2.4",
    "oxlint": "^1.22.0"
  },
  "lint-staged": {
    "*": [
      "bunx oxlint --fix",
      "bunx eslint --fix"
    ]
  }
}
