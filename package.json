{
  "name": "mcverify-bun",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "module": "index.ts",
  "scripts": {
    "lint:migrate": "bunx @oxlint/migrate ./eslint.config.ts",
    "lint": "bunx oxlint && bunx eslint",
    "lint:fix": "bunx oxlint --fix && bunx eslint --fix",
    "postinstall": "git-hooks",
    "start": "bun run --define process.env.NODE_ENV=\"'production'\" src/index.ts",
    "dev": "bun run --define process.env.NODE_ENV=\"'development'\" --watch src/index.ts",
    "bundle": "bun build --define process.env.NODE_ENV=\"'production'\" --compile --minify --splitting --target=bun-linux-x64-modern ./src/index.ts --outfile dist-binary/mcverify",
    "build": "bun build --define process.env.NODE_ENV=\"'production'\" --minify --splitting --target=bun ./src/index.ts --outdir dist"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/server-timing": "^1.4.0",
    "@elysiajs/static": "^1.4.4",
    "consola": "^3.4.2",
    "elysia": "^1.4.11",
    "fake-verify-server": "workspace:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/ejs": "^3.1.5",
    "bun-git-hooks": "^0.3.1",
    "bun-types": "^1.3.0",
    "ejs": "^3.1.10",
    "eslint": "^9.37.0",
    "eslint-plugin-oxlint": "^1.23.0",
    "lint-staged": "^16.2.4",
    "oxlint": "^1.23.0",
    "pretty-bytes": "^7.1.0"
  },
  "lint-staged": {
    "*": [
      "bunx oxlint --fix",
      "bunx eslint --fix"
    ]
  },
  "workspaces": {
    "packages": [
      "fake-verify-server"
    ]
  }
}
